{
  "version": "1.0.1",
  "agent": "core-orchestrator",
  "modes": {
    "turbo": {
      "max_files": 3,
      "max_questions": 0,
      "design_doc": false,
      "subagents": false,
      "estimated_tokens": "low"
    },
    "standard": {
      "max_files": 10,
      "max_questions": 2,
      "design_doc": "brief",
      "subagents": true,
      "estimated_tokens": "medium"
    },
    "audit": {
      "max_files": 100,
      "max_questions": 10,
      "design_doc": "full",
      "subagents": true,
      "multi_review": true,
      "estimated_tokens": "high"
    }
  },
  "detection": {
    "complexity_indicators": [
      "auth",
      "security",
      "payment",
      "encrypt",
      "architecture",
      "refactor",
      "migrate",
      "redesign"
    ],
    "turbo_keywords": [
      "fix",
      "typo",
      "rename",
      "color",
      "style",
      "format",
      "lint",
      "comment",
      "log"
    ]
  }
}